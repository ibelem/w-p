*/

.home .content {
  height: auto;
}

#hero {
  display: none;
}

.home #hero {
  display: grid;
}

.decorationsOverviewRuler, .monaco-scrollable-element > .scrollbar {
  width: 8px !important;
}
 
#wrap {
  max-width: 1280px;
  margin: 0 auto;
  text-align: center;
}

.content {
  max-width: 1280px;
  margin: 0px auto;
  text-align: center;
}

#editorcontainer {
  text-align: left;
  border: 1px solid rgba(0, 0, 0, 0.2);
  height: calc(100vh - 196px);
  margin: 0 3rem;
}

.header {
  background-image: none;
}

.home .header {
  margin: 0px auto;
  overflow: hidden;
  color: rgba(255, 255, 255, 1.0);
  background-blend-mode: overlay, multiply, color, normal;
}

.t {
  animation: 0.8s ease 2s 1 normal forwards running cCHcAw;
  animation: glow 4.1s ease-out.5s;
  animation-fill-mode: forwards;
  filter: blur(160px);
  z-index: -1000;
  background: conic-gradient(from 230.29deg at 51.63%52.16%,#2400ff 0deg,#0087ff 67.5deg,#ff1d7a 198.75deg,#f5381b 251.25deg,#ff5335 301.88deg,#691eff 360deg);
}

@keyframes glow {
  0% {
    opacity: 0.9;
    -webkit-animation-timing-function: cubic-bezier(.74, .25, .76, 1);
    animation-timing-function: cubic-bezier(.74, .25, .76, 1)
  }

  50% {
    opacity: 0.95;
    -webkit-animation-timing-function: cubic-bezier(.12, .01, .08, .99);
  }

  100% {
    opacity: 1;
  }
}

.home h3 {
  text-transform: uppercase;
  font-size: 1rem;
  letter-spacing: 2px;
  font-weight: 500;
  height: 1rem;
}

nav ul li {
  color: #333;
  text-shadow: none;
}

.home nav ul li {
  color: rgba(255, 255, 255, 1.0);
  text-shadow: rgba(0, 0, 0, 0.2) 1px 1px 1px;
}

.logo-1, .home #wrap.onScroll .logo-1 {
  opacity: 1.0;
  font-size: 48px;
  fill: #333;
  font-family: Poppins;
  letter-spacing: 0.01em;
  text-shadow: none;
}

.logo-2, .home #wrap.onScroll .logo-2 {
  fill: none;
  stroke: rgba(12, 211, 255, 1.0);
  stroke-miterlimit: 10;
  stroke-width: 5px;
}

.home .logo-1 {
  fill: #fff;
}

.home .logo-2 {
  stroke: #fff;
}

.pageview {
  margin: 3rem 0 4rem 0;
}

@media only screen and (max-width: 640px) {
  #wrap {
    max-width: 640px;
  }
 
  .home #wrap.onScroll header a {
    margin-left: 0;
  }

  .home #wrap.onScroll header nav {
    margin-right: 0;
  }

  nav {
    justify-self: center;
  }

  #editorcontainer {
    margin: 0px 1rem;
  }
}

@media screen and (min-width: 641px) and (max-width: 1024px) {
  .home #wrap.onScroll header {
    position: fixed;
    width: 100vw;
    padding: 1rem 0rem;
    left: 0;
    top: 0;
    z-index: 1000;
    box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
    animation: fadeIn 0.5s;	
    background-color: rgba(255, 255, 255, 0.95);
    ul li {
      color: #333;
      text-shadow: none;
    }
    a {
      margin-left: 9.5rem;
    }
    nav {
      margin-right: 10.8rem;
    }
  }

  #wrap, .content {
    max-width: 1024px;
  }
  
  header {
    padding: 1rem;
  }

  .home #wrap.onScroll header {
    width: auto;
    padding: 0 1rem;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10000;
  }

  .home #wrap.onScroll header a {
    margin-left: 0;
    padding-top: 8px;
  }

  .home #wrap.onScroll header nav {
    margin-right: 0;
  }

  nav {
    justify-self: right;
  }
}

@media screen and (min-width: 1025px) and (max-width: 1280px) {
  .home #wrap.onScroll header {
    position: fixed;
    width: 100vw;
    padding: 1rem 0rem;
    left: 0;
    top: 0;
    box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
    animation: fadeIn 0.5s;	
    background-color: rgba(255, 255, 255, 0.95);
    ul li {
      color: #333;
      text-shadow: none;
    }
    a {
      margin-left: 9.5rem;
    }
    nav {
      margin-right: 10.8rem;
    }
  }

  #wrap, .content {
    max-width: auto;
  }

  .home #wrap.onScroll header {
    width: auto;
    padding: 1rem;
    position: fixed;
    top: 0;
    right: 0;
  }
  
  .home #wrap.onScroll header a {
    margin-left: 0;
    padding-top: 8px;
  }

  .home #wrap.onScroll header nav {
    margin-right: 0;
  }
}
