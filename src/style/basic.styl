html, body {
  color $font-color
  margin 0
  padding 0
  font-size 14px
  font-family Poppins, Avenir, Helvetica, Arial, sans-serif
}

header {
  padding: 2rem 1rem 1rem 1rem;
}

ul,
li,
ol {
  padding 0
  margin 0
  list-style none
}

.flex-center {
  display flex
  justify-content center
  align-items center
}

.content {
  height: calc(100vh - 150px);
}

.home .content {
  height: auto;
}

#hero {
  display: none;
}

.home #hero {
  display: grid;
}

.home #wrap.onScroll header {
  position: sticky;
  padding: 0rem 1rem;
  left: 0;
  top: 0;
  z-index: 1000;
  box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
  background-color: rgba(255, 255, 255, 0.9);
  ul li {
    color: #333;
  }
}

#editorcontainer {
  height: calc(100vh - 200px);
}

.decorationsOverviewRuler, .monaco-scrollable-element > .scrollbar {
  width: 8px !important;
}
 
#wrap {
  max-width: 1280px;
  margin: 0 auto;
  text-align: center;
}

.header {
  background: none;
}

.home .header {
  background-image: linear-gradient(21deg, #0cd3ff 68%, #30F197 163%), linear-gradient(163deg, #30F197 86%, #e406f9 40%), linear-gradient(0deg, #e406f9 122%, #0cd3ff 169%), linear-gradient(45deg, #0cd3ff 64%, #30F197 43%);
  background-blend-mode: overlay, multiply, color, normal;
  color: rgba(255, 255, 255, 1.0);
}

.home h3 {
  text-transform: uppercase;
  font-size: 1.1rem;
  letter-spacing: 2px;
  font-weight: 300;
}