html, body {
  color $font-color
  margin 0
  padding 0
  font-size 14px
  font-family Poppins, Avenir, Helvetica, Arial, sans-serif
}

header {
  padding: 2rem 1rem 1rem 1rem;
}

ul,
li,
ol {
  padding 0
  margin 0
  list-style none
}

.flex-center {
  display flex
  justify-content center
  align-items center
}

/* 
