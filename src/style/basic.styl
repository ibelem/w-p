html, body {
  color $font-color
  margin 0
  padding 0
  font-size 14px
  font-family Poppins, Avenir, Helvetica, Arial, sans-serif
}

header {
  padding: 2rem 1rem 1rem 1rem;
}

ul,
li,
ol {
  padding 0
  margin 0
  list-style none
}

.flex-center {
  display flex
  justify-content center
  align-items center
}

.content {
  height: calc(100vh - 150px);
}

#editorcontainer {
  height: calc(100vh - 200px);
}

.decorationsOverviewRuler, .monaco-scrollable-element > .scrollbar {
  width: 8px !important;
}
 
.home {
  height: 60vh;
  background: linear-gradient(169.4deg,rgba(57,132,244,.1) -6.01%,rgba(12,211,255,.1) 36.87%,rgba(47,124,240,.1) 78.04%, rgba(14,101,232,.1) 103.77%);
}

.home h3 {
  text-transform: uppercase;
  font-size: 1.1rem;
  letter-spacing: 2px;
  font-weight: 300;
}