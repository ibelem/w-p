$font-color = #2c3e50
$background-color = #fff
$second-background-color = #f1f1f1

html, body {
  color $font-color
  margin 0
  padding 0
  font-size 12px
}

ul,
li,
ol {
  padding 0
  margin 0
  list-style none
}

.flex-center {
  display flex
  justify-content center
  align-items center
}

.content {
  height: calc(100vh - 100px);
}

.decorationsOverviewRuler, .monaco-scrollable-element > .scrollbar {
  width: 8px !important;
}
