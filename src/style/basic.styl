html, body {
  color $font-color
  margin 0
  padding 0
  font-size 14px
  font-family Poppins, Avenir, Helvetica, Arial, sans-serif
}

header {
  padding: 2rem 1rem 1rem 1rem;
}

ul,
li,
ol {
  padding 0
  margin 0
  list-style none
}

.flex-center {
  display flex
  justify-content center
  align-items center
}

.content {
  height: calc(100vh - 165px);
}

.home .content {
  height: auto;
}

#hero {
  display: none;
}

.home #hero {
  display: grid;
}

.home #wrap.onScroll header {
  position: fixed;
  width: 100vw;
  padding: 1rem 0rem;
  left: 0;
  top: 0;
  z-index: 1000;
  box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
  animation: fadeIn 0.5s;	
  background-color: rgba(255, 255, 255, 0.95);
  ul li {
    color: #333;
    text-shadow: none;
  }
  a {
    margin-left: 9.5rem;
  }
  nav {
    margin-right: 10.8rem;
  }
}

#editorcontainer {
  height: calc(100vh - 210px);
}

.decorationsOverviewRuler, .monaco-scrollable-element > .scrollbar {
  width: 8px !important;
}
 
#wrap {
  max-width: 1280px;
  margin: 0 auto;
  text-align: center;
}

.content {
  max-width: 1280px;
  margin: 0px auto;
  text-align: center;
}

#editorcontainer {
  text-align: left;
  border: 1px solid rgba(0, 0, 0, 0.2);
}

.header {
  background-image: none;
}

.home .header {
  margin: 0px auto;
  overflow: hidden;
  animation: 0.8s ease 2s 1 normal forwards running cCHcAw;
  background-blend-mode: overlay, multiply, color, normal;
  color: rgba(255, 255, 255, 1.0);
}

.home h3 {
  text-transform: uppercase;
  font-size: 1em;
  letter-spacing: 2px;
  font-weight: 500;
}

nav ul li {
  color: #333;
  text-shadow: none;
}

.home nav ul li {
  color: rgba(255, 255, 255, 1.0);
  text-shadow: rgb(0 0 0 / 5%) 0 1px 0;
}

.logo-1, .home #wrap.onScroll .logo-1 {
  opacity: 1.0;
  font-size: 48px;
  fill: #333;
  font-family: Poppins;
  letter-spacing: 0.01em;
  text-shadow: none;
}

.logo-2, .home #wrap.onScroll .logo-2 {
  fill: none;
  stroke: rgba(12, 211, 255, 1.0);
  stroke-miterlimit: 10;
  stroke-width: 3px;
}

.home .logo-1 {
  fill: #fff;
}

.home .logo-2 {
  stroke: #fff;
}

@media only screen and (max-width: 640px) {
  #wrap {
    max-width: 640px;
  }

  .home #wrap.onScroll header {
    width: auto;
    padding: 2rem 1rem 1rem 1rem;
    position: sticky;
    top: 0;
    left: 0;
  }

  .home #wrap.onScroll header a {
    margin-left: 0;
  }

  .home #wrap.onScroll header nav {
    margin-right: 0;
  }

  nav {
    justify-self: center;
  }
}

@media screen and (device-width: 768px) and (device-height: 1024px) and (orientation:portrait) {
  body {
    background-color: yellow;
  }
}
@media screen and (device-width: 1024px) and (device-height: 768px) and (orientation:landscape) {
  body {
    background-color: blue;
  }
}
